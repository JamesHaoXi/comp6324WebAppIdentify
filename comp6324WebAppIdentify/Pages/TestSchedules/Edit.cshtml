@page
@model comp6324WebAppIdentify.Pages.TestSchedules.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>TestSchedule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TestSchedule.ScheduleID" />
            <div class="form-group">
                <label asp-for="TestSchedule.deviceID" class="control-label"></label>
                <input asp-for="TestSchedule.deviceID" class="form-control" />
                <span asp-validation-for="TestSchedule.deviceID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TestSchedule.ScheduleTime" class="control-label"></label>
                <input asp-for="TestSchedule.ScheduleTime" class="form-control" />
                <span asp-validation-for="TestSchedule.ScheduleTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="TestSchedule.Done" /> @Html.DisplayNameFor(model => model.TestSchedule.Done)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
